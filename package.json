{
  "name": "instagram-hashtag-generator",
  "version": "0.1.1",
  "description": "Opinionated hashtag generator for Instagram posts",
  "author": "Tommy Schmucker",
  "license": "AGPL",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "serve src",
    "clean": "rm -fR dist && mkdir dist",
    "tw:dev": "npx tailwindcss -i ./src/assets/css/tailwind.css -o ./src/assets/css/style.css",
    "tw:prod": "NODE_ENV=production npx tailwindcss -i ./src/assets/css/tailwind.css -o ./dist/assets/css/style.min.css --minify",
    "build": "npm run clean && npm run copy && npm run minify && npm run replace && npm run tw:prod",
    "copy": "mkdir ./dist/assets && cp -r ./src/assets/js ./dist/assets/js",
    "minify": "npx minhtml ./src/index.html --minify-js --collapse-whitespace -o ./dist/index.html",
    "replace": "sed -i 's/style.css/style.min.css/' ./dist/index.html"
  },
  "devDependencies": {
    "minhtml": "^0.7.0",
    "serve": "^13.0.2",
    "tailwindcss": "latest"
  }
}
